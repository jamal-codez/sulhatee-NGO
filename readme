// Check if the user has completed registration or not
$user_id = $last_id; // Assuming $last_id is the user ID after user_bio insertion
$check_registration_status_sql = "SELECT bio_status, bus_status FROM user_registration_status WHERE user_id = ?";
$stmt = $conn->prepare($check_registration_status_sql);
$stmt->bind_param("i", $user_id);
$stmt->execute();
$registration_status = $stmt->get_result()->fetch_assoc();

// Check if the user has completed both bio and business registration
if ($registration_status['bio_status'] && $registration_status['bus_status']) {
    // User has completed both registrations, redirect or do something else
    // For example:
    header('Location: ../index.php');
    exit;
}

// Update the registration status after each form submission
if (isset($_POST['signup_bios'])) {
    // Insert user bios...
    
    // Update registration status
    $update_status_sql = "UPDATE user_registration_status SET bio_status = 1 WHERE user_id = ?";
    $stmt = $conn->prepare($update_status_sql);
    $stmt->bind_param("i", $user_id);
    $stmt->execute();
    // Check for success or handle errors...
} elseif (isset($_POST['signup_bus'])) {
    // Insert business info...
    
    // Update registration status
    $update_status_sql = "UPDATE user_registration_status SET bus_status = 1 WHERE user_id = ?";
    $stmt = $conn->prepare($update_status_sql);
    $stmt->bind_param("i", $user_id);
    $stmt->execute();
    // Check for success or handle errors...
}

